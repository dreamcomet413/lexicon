<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order - Lexicon</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body class="vilotBgColor success orderFinal">
    <div class="pageWrap">
        <!-- Header -->
        <div class="header rPos">
            <div class="headerBg"></div>
            <div class="overlayVilot"></div>
            <div class="grid rPos">
                <div class="row">
                    <div class="c2">
                        <div class="logo">
                            <%= image_tag "logo.png", alt: 'Lexicon' %>
                        </div>
                    </div>

                    <div class="c10">
                        <div class="navigation">
                            <ul>
                                <li>
                                  <% if current_user -%>
                                    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "primaryButton" -%>
                                  <% else -%>  
                                    <%= link_to "Log in", new_session_path(:user), class: 'primaryButton' %>
                                  <% end -%>  
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main rPos primaryColor">
            <div class="grid">
                <div class="row">
                    <div class="productHeader">
                        <div class="c3">
                            <h2>PRODUCT</h2>
                            <p class="removeTop">Click thumbnail to zoom</p>
                        </div>

                        <div class="c6">
                        </div>

                        <div class="c1">
                            <p>Min. Quantity</p>
                        </div>

                        <div class="c2">
                            <p>Quantity</p>
                        </div>
                    </div>
                    <div class="clear"></div>
                    
                    <%= form_for @order, id: 'order-form' do |f| %>
                      <div class="productList">
                          <div class="c12">
                              <div class="row">
                                
                                <%= f.fields_for :order_items do |order_item| %>
                                    <%= render partial: "order_item", locals: {f: order_item} -%>
                                <% end %> 
                                   
                              </div>
                          </div>
                      </div>
                    
                      <div class="clear"></div>
                      <div class="cartButton">
  	                    <div class="c12">
  	                      <%= f.submit "Add to Cart", id: "form-submit", style: "display:none;" %>
  		                    <a class="primaryButton addCart right" href="#" onclick="document.getElementById('form-submit').click();return false;">Add to Cart</a>
  	                    </div>
                      </div>
                      
                    <% end %>  
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer rPos">
        <div class="grid">
            <div class="row">
                <div class="c2">
                    <div class="footerLogo">
                        <%= image_tag "logo.png", alt: 'Lexicon' %>
                    </div>
                </div>
                <div class="c10">
                    <p>Corporate Headquarters: 8800 Technology Forest Place â€¢ The Woodlands, Texas 77381-1160</p>
                    <p>Phone: 281.863.3000 | Toll Free: 855.828.4651 | Fax: 281.863.8088</p>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</body>

</html>