<div class="productRow product-1">
    <div class="c1">
        <div class="productImage">
          <a class="fancybox" href="<%= f.object.product.image.url -%>">
            <%= image_tag f.object.product.image.url, alt: "product", style: "width:56px;height:75px;" %>
            <div class="cContainer">
                <%= image_tag "cameraphoto.png", alt: "Zoom Image" -%>
            </div>
          </a>
        </div>
    </div>

    <div class="c8">
        <div class="productDesc">
            <p>
              <strong><%= f.object.product.name %></strong>
              <br/>
              <%= f.object.product.description -%>
              <% if f.object.errors.any? %>
                <br/>
                <small style="color:#8b0000;float:right;"><%= f.object.errors.full_messages.first -%></small>
              <% end -%>
            </p>
        </div>
    </div>

    <div class="c1">
        <div class="productMinQ">
            <br/>
            <p><%= @min_qty_level %></p>
        </div>
    </div>

    <div class="c2">
        <div class="productQ">
            <%= f.text_field :quantity, type: :number, min: 1 %>
            <%= f.hidden_field :product_id %>
        </div>
    </div>
</div>